{
  "name": "585designsystem",
  "version": "0.0.11-4",
  "description": "Viritsa Components Library",
  "main": "dist/js/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashunin/585-design-system.git"
  },
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:docs": "vue-styleguidist build",
    "start:docs": "vue-styleguidist server --open --config ./config/docs.config.js",
    "theo": "theo ./src/tokens/tokens.yml --transform web --format map.scss,scss,raw.json,json --dest ./src/assets/tokens",
    "lint": "vue-cli-service lint"
  },
  "author": "585",
  "dependencies": {
    "core-js": "^3.3.2",
    "svgo-loader": "^2.2.1",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "html-loader": "^0.5.5",
    "sass": "1.23.7",
    "sass-loader": "^8.0.0",
    "theo": "^8.1.4",
    "vue-cli-plugin-styleguidist": "^3.26.0",
    "vue-styleguidist": "^3.26.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/no-use-v-if-with-v-for": "off",
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
